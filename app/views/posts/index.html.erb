<% if current_user.posts.present? %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-6">
        <div class="container">
          <div class="row">
            <% @posts.each do | post | %>
                <div class="col-12 col-lg-6 g-3">
                  <div class="card mb-3">
                    <%= cl_image_tag post.cover_photo.key, class:"card-img-top" %>
                    <div class="card-body">
                      <p class="card-text"><%= post.date.strftime("%b %d %Y") %></p>
                      <h5 class="card-title pb-1"><%= post.address %></h5>
                      <a href="<%= post_path(post) %>">View post</a>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-6 p-0">
        <div style="width: 100%; height: 100%"
          class="sticky-top"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
<% else %>
  <%= link_to "Go ahead, write your first post", new_post_path %>
<% end %>
