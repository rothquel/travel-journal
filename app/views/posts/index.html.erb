<% if current_user.posts.present? %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-4">
        <div class="container">
          <div class="row">
            <% @posts.each do | post | %>
              <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <%= cl_image_tag post.cover_photo.key, class:"img-fluid rounded-start" %>
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <p class="card-text"><small class="text-muted"><%= post.date.strftime("%b %d %Y") %></small></p>
                      <h5 class="card-title"><%= post.address %></h5>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-8 p-0">
        <div style="width: 100%; height: 100%"
          class="sticky-top"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
<% else %>
  <%= link_to "Go ahead, write your first post", new_post_path %>
<% end %>
